  # ↓
  term_ids = Arrow::UInt32ArrayBuilder.build([29, 9])

= 一手間

  # coderay ruby
  module Arrow
    class ArrayBuilder
      class << self
        def build(values)
          builder = new
          values.each do |value|
            builder.append(value)
          end
          builder.finish
        end
      end
    end
  end

= もう一手間

  # coderay ruby

  module Arrow
    class UInt32Array
      class << self
        def new(values)
          UInt32ArrayBuilder.build(values)
        end
      end
    end
  end

